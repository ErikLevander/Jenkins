pipeline {
  agent any
  stages {
    stage('Prepare needed tools') {
      steps {
        sh 'pip3 install autopep8 pylint pytest'
        sh 'python3 -m pip install -r requirements.txt'
      }
    }

    stage('Code quality assurance') {
      steps {
        sh '''python3 -m autopep8 --diff ./src/main.py
python3 -m autopep8 --diff ./src/test_main.py'''
        sh 'python3 -m pylint ./src/'
      }
    }

    stage('Unit testing') {
      steps {
        sh 'python3 -m pytest ./src/'
      }
    }

  }
}